@using Common.Models
@if (Headings is not null && Headings.Count > 0)
{
    <ol class="fade-in">
        @foreach (var heading in Headings.OrderByDescending(model => model.Pub_Date).ThenByDescending(model => model.Published_At).ToList())
        {
            <li style="margin-bottom: 5px">
                <HeadingComponent 
                    Title="@heading.Title" 
                    Url="@heading.Url" 
                    Date="@heading.Pub_Date" 
                    Time="@heading.Published_At" 
                    Text="@string.Empty"
                    ShowText="@false"/>
            </li>
        }
    </ol>
}
else
{
    <div class="alert alert-secondary fade-in" role="alert">
        Материалы не найдены...
    </div>
}

@code {
    [Parameter]
    public List<HeadingModel>? Headings { get; set; }
}